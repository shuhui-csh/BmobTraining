<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/wood">
    
    <View
	    android:layout_width="match_parent" 
	    android:layout_height="3dp"></View>
    
    	<RelativeLayout
	    	android:id="@+id/rl_info"
	    	android:layout_width="match_parent"
	    	android:layout_height="70dp"
	    	android:orientation="horizontal"
	    	android:background="@drawable/item"
	    	android:padding="10dip">
		<!-- 垂直方向上居中：centerVertical -->
	    	<TextView 
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:text="个人资料"
	    	    android:textColor="@android:color/white"
	    	    android:textSize="19sp"
	    	    android:layout_alignParentRight="true"
          	 	android:layout_centerVertical="true"
           		android:layout_marginRight="10dp"
           		android:drawableRight="@drawable/forward_arrow" />
	</RelativeLayout>
	
	<View
	    android:layout_width="match_parent" 
	    android:layout_height="3dp"></View>
	
	<RelativeLayout
        android:id="@+id/rl_switch_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="接收新消息通知"
            android:textColor="@android:color/white"
             />
		
        <ImageView
            android:id="@+id/iv_open_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/on"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_close_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/off"
            android:visibility="invisible" />
    </RelativeLayout>
    
	<View
	    android:layout_width="match_parent" 
	    android:layout_height="3dp"></View>
	
	<RelativeLayout
        android:id="@+id/rl_switch_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="声音" 
            android:textColor="@android:color/white"/>
		
        <ImageView
            android:id="@+id/iv_open_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/on"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_close_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/off"
            android:visibility="invisible" />
    </RelativeLayout>
    
	<View
	    android:id="@+id/line_voice"
	    android:layout_width="match_parent" 
	    android:layout_height="3dp"></View>
	
	<RelativeLayout
        android:id="@+id/rl_switch_vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="震动" 
            android:textColor="@android:color/white"/>
		
        <ImageView
            android:id="@+id/iv_open_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/on"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_close_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/off"
            android:visibility="invisible" />
    </RelativeLayout>

	<View
	    android:id="@+id/line_vibrate"
	    android:layout_width="match_parent" 
	    android:layout_height="3dp">
	</View>
	<Button 
	    android:id="@+id/btn_logout"
	    android:layout_marginTop="18dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="18dp" 
	    android:layout_marginRight="18dp"
	    android:background="@drawable/round_btn_red"
	    android:textColor="@android:color/white"
	    android:text="退出登陆"></Button>

</LinearLayout>
